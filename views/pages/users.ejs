<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
</head>
<body class="container">

<header>
    <%- include('../partials/header'); %>
</header>

<main>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
              <div class="col-sm">
                <h2>User info</h2>
                <form action="/api/insertuser" method="post">
                    <label for="fname">User:</label>
                    <input type="text" id="user" name="user"><br><br>
                    <label for="lname">Email:</label>
                    <input type="text" id="email" name="email"><br><br>
                    <label for="lname">Password:</label>
                    <input type="text" id="password" name="password"><br><br>
                    <input type="submit" value="Insert">
                  </form>
                  <p><%= iteminserted %></p>
                  <p><%= itemnoinserted %></p>
              </div>
              <div class="col-sm">
                <h2>Update</h2>
                    <form action="/api/updateuser" method="post">
                        <label for="fname">ID to update:</label>
                        <input type="text" id="id_update" name="id_update"><br><br>
                        <label for="fname">User:</label>
                        <input type="text" id="user_update" name="user_update"><br><br>
                        <label for="lname">Email:</label>
                        <input type="text" id="email_update" name="email_update"><br><br>
                        <label for="lname">Password:</label>
                        <input type="text" id="password_update" name="password_update"><br><br>
                        <input type="submit" value="Update">
                    </form>
                    <p><%= error %></p>
                    <p><%= tagline %></p>
              </div>
              <div class="col-sm">
                <h2>Delete</h2>
                    <form action="/api/deleteuser" method="post">
                        <label for="fname">Id:</label>
                        <input type="text" id="id" name="id"><br><br>
                        <input type="submit" value="Delete">
                    </form>
                    <p><%= itemdeleted %></p>
                    <p><%= itemnodeleted %></p>
              </div>
            </div>
          </div>
        <h1>Dashboard</h1>
        <p>List of parameters uploaded</p>
        <% for(var i = 0; i < result.length; i++) {%>
            <li class="users">
              <span><%= result[i]._id %></span>:
            <!-- Output name from the iterated quote object -->
            <span><%= result[i].user %></span>:
            <!-- Output quote from the iterated quote object -->
            <span><%= result[i].email %></span>
            <!-- Output quote from the iterated quote object -->
            <span><%= result[i].password %></span>
            </li>
        <% } %>
        
          

          
    </div>
    
    <ul>
        <% mascots.forEach(function(mascot) { %>
            <li>
                <strong><%= mascot.name %></strong>
                representing <%= mascot.organization %>, born <%= mascot.birth_year %>
            </li>
        <% }); %>
    </ul>
</main>

<footer>
    <%- include('../partials/footer'); %>
</footer>
<script src="/socket.io/socket.io.js"></script>
</body>
</html>